<% include header %>

<div id="splash-page" class="text-center">
  <h1 class="title">Audience Engagement Analyzer</h1>
  <h3></h3>
  <i id="start-splash-page" class="fa fa-play-circle" aria-hidden="true"></i>
</div>

<div class="reveal" id="modal" data-reveal>

  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

